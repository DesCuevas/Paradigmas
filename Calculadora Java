public class Calculadora {
    
    private int entero;
    private float flotante;
    private double doble;

    // Constructor con valores fijos
    public Calculadora() {
        entero=22;
        flotante=8.4f;
        doble=5.18967;
    }

    // Constructor con valores personalizados
    public Calculadora(int entero, float flotante, double doble) {
        this.entero=entero;
        this.flotante=flotante;
        this.doble=doble;
    }

    // Métodos de suma para valores enteros
    public int suma(int a, int b){
        return a + b;
    }

    // Métodos de resta para valores enteros
    public int resta(int a, int b){
        return a - b;
    }

    // Métodos de suma para valores flotantes
    public float suma(float a, float b){
        return a + b;
    }

    // Métodos de resta para valores flotantes
    public float resta(float a, float b){
        return a - b;
    }

    // Métodos de suma para valores dobles
    public double suma(double a, double b){
        return a + b;
    }

    // Métodos de resta para valores dobles
    public double resta(double a, double b){
        return a - b;
    }

    // Método para multiplicar enteros con sumas sucesivas
    public int multi(int a, int b){
        int resultado=0;
        for (int i=0; i<b; i++) {
            resultado=suma(resultado, a);
        }
        return resultado;
    }

    // Método para dividir enteros con restas sucesivas
    public int division(int a, int b){
        int resultado=0;
        while (a>=b) {
            resultado=suma(resultado, 1);
            a=resta(a, b);
        }
        return resultado;
    }

    // Métodos de multiplicación para valores flotantes
    public float multi(float a, float b){
        return a * b;
    }

    // Métodos de multiplicación para valores dobles
    public double multi(double a, double b){
        return a * b;
    }

    // Métodos de división para valores flotantes
    public float division(float a, float b){
        return a / b;
    }

    // Métodos de división para valores dobles
    public double division(double a, double b){
        return a / b;
    }

    // Método para calcular el módulo con valores enteros
    public int modulo(int a, int b){
        int cociente=division(a, b);
        int residuo=resta(a, multi(cociente, b));
        return residuo;
    }
}
